@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Button
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Form
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Grid
@using Volo.CmsKit.Localization
@inject IHtmlLocalizer<CmsKitResource> L
@model Volo.CmsKit.Admin.Contact.CmsKitContactSettingDto

<script src="/Pages/CmsKit/Components/CmsKitProSettingGroup/ContactSettings/Default.js"></script>

<form id="CmsKitProContactSettingsForm">
    <abp-row>
        <abp-column size-md="_12">
            <div>
                <abp-input asp-for="ReceiverEmailAddress" label="@L["ReceiverEmailAddress"].Value" />
            </div>
            <hr class="my-4" />
            <div>
                <abp-button button-type="Primary" type="submit"><i class="fa fa-save"></i> @L["Save"]</abp-button>
            </div>
        </abp-column>
    </abp-row>
</form>