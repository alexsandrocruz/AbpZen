@page
@using Volo.CmsKit.Pro.Admin.Web.Pages
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Volo.CmsKit.PageFeedbacks
@using Volo.CmsKit.Pro.Admin.Web.Pages.CmsKit.PageFeedbacks
@inherits AdminPageBase

@model SettingsModal

@{
    Layout = null;
}
<form method="post" asp-page="/CmsKit/PageFeedbacks/SettingsModal">
    <abp-modal size="@(AbpModalSize.Large)">
        <abp-modal-header title="@L["MailSettings"].Value"></abp-modal-header>
        <abp-modal-body>
            <span>@L["EmailAddresses:Info"]</span>
            <abp-table class="mt-4 mb-0">
                <thead>
                <tr>
                    <th>@L["EntityType"]</th>
                    <th>@L["EmailAddresses"]</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>
                        <label asp-for="DefaultSetting.EmailAddresses">@L["Default"]</label>
                    </td>
                    <td>
                        <input class="form-control" asp-for="DefaultSetting.EmailAddresses"
                               data-val-multiple-emails-delimiter="@PageFeedbackConst.EmailAddressesSeparator" data-val-multiple-emails="true"
                               placeholder="@L["PageFeedback:Settings:EmailAddresses:Placeholder"]"
                               data-val-multiple-emails-message="@L["MultipleEmailsValidationError", L["Default"]]"/>
                        <input asp-for="DefaultSetting.Id" hidden/>
                        <span class="text-muted">@L["FallBackEmailAddressInfo"].Value</span>
                    </td>
                </tr>
                @for (var i = 0; i < Model.Settings.Count; i++)
                {
                    var entityType = Model.Settings[i].EntityType;
                    <tr>
                        <td>
                            <label asp-for="Settings[i].EmailAddresses">@entityType</label>
                        </td>
                        <td>
                            <input class="form-control" asp-for="Settings[i].EmailAddresses" placeholder="@L["PageFeedback:Settings:EmailAddresses:Placeholder"]"
                                   data-val-multiple-emails-delimiter="@PageFeedbackConst.EmailAddressesSeparator" data-val-multiple-emails="@L["MultipleEmailsValidationError", entityType]"
                                   data-val-multiple-emails-message="@L["MultipleEmailsValidationError", entityType]"/>
                            <input asp-for="Settings[i].Id" hidden/>
                            <input asp-for="Settings[i].EntityType" hidden/>
                        </td>
                    </tr>
                }
                </tbody>
            </abp-table>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Close | AbpModalButtons.Save)">
        </abp-modal-footer>
    </abp-modal>
</form>