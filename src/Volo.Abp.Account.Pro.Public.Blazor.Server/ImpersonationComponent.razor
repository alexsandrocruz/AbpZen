@using Microsoft.Extensions.Localization
@using Volo.Abp.Account.Localization
@inject IStringLocalizer<AccountResource> L
    
<form method="post" action="/Account/BackToImpersonator" class="d-flex align-items-center justify-content-center">
    <button type="submit" class="btn lpx-menu-item-link active-menu-item position-relative w-100" data-bs-toggle="tooltip" data-bs-placement="left" title="@L["BackToImpersonator"]">
        <span class="lpx-menu-item-icon">
            <small class="menu-item-badge bg-warning position-absolute top-0">
                <i class="bi bi-arrow-counterclockwise" style="font-size: 16px"></i>
            </small>
            <i class="lpx-icon action-icon bi bi-person-workspace fa-solid fa fa-arrow-left" aria-hidden="true"></i>
        </span>
    </button>
</form>
