@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Volo.Abp.OpenIddict.Localization
@model Volo.Abp.OpenIddict.Pro.Web.Pages.OpenIddict.Applications.TokenLifetimeModal
@inject IHtmlLocalizer<AbpOpenIddictResource> L

@{
    Layout = null;
}

<form asp-page="/OpenIddict/Applications/TokenLifetimeModal">
    <abp-modal>
        <abp-modal-header title="@L["TokenLifetime"].Value"></abp-modal-header>
        <abp-modal-body>
            <div class="mb-3">
                <small class="text-muted">
                    <i class="fa fa-info-circle"></i> @L["TokenLifetimeHit"].Value
                </small>
            </div>
            <input asp-for="ApplicationId" hidden/>
            <abp-input asp-for="TokenLifetime.AccessTokenLifetime"></abp-input>
            <abp-input asp-for="TokenLifetime.AuthorizationCodeLifetime"></abp-input>
            <abp-input asp-for="TokenLifetime.DeviceCodeLifetime"></abp-input>
            <abp-input asp-for="TokenLifetime.IdentityTokenLifetime"></abp-input>
            <abp-input asp-for="TokenLifetime.RefreshTokenLifetime"></abp-input>
            <abp-input asp-for="TokenLifetime.UserCodeLifetime"></abp-input>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
