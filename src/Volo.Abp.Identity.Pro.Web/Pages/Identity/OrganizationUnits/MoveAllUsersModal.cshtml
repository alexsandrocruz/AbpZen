@page
@using System.Web
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Volo.Abp.Identity.Localization
@using Volo.Abp.Identity.Web.Pages.Identity.OrganizationUnits
@model MoveAllUsersModal
@inject IHtmlLocalizer<IdentityResource> L
@{
    Layout = null;
}

<form method="post"  asp-page="/Identity/OrganizationUnits/MoveAllUsersModal" autocomplete="off">
    <abp-modal>
        <abp-modal-header title="@(L["MoveAllUsers"].Value) - @HttpUtility.HtmlEncode(Model.OrganizationUnit.Name)"></abp-modal-header>
        <abp-modal-body>

            <abp-input asp-for="OrganizationUnit.Id" type="hidden"></abp-input>

            <p id="MoveAllUsersWithOrganizationUnitTo">@L.GetHtml("MoveAllUsersWithOrganizationUnitTo", Model.OrganizationUnit.Name)</p>

            <select name="OrganizationUnit.TargetOrganizationUnitId" id="OrganizationUnit_TargetOrganizationUnitId" class="form-select">
                <option value="" selected>@L["UnassignOrganizationUnit"].Value</option>
                @foreach (var role in Model.OrganizationUnit.TargetOrganizationUnits)
                {
                    <option value="@role.Key">@role.Value</option>
                }
            </select>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
