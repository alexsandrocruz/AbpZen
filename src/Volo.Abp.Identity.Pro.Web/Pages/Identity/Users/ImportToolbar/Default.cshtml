@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.Identity.Localization
@inject IHtmlLocalizer<IdentityResource> L

<abp-dropdown>
    <abp-dropdown-button size="Small" button-type="Outline_Primary" text="@L["Import"].Value" />
    <abp-dropdown-menu>
        <abp-dropdown-item style="cursor: pointer" id="ExternalUserButton">@L["ExternalUser"]</abp-dropdown-item>
        <abp-dropdown-item style="cursor: pointer" id="FromExcelButton">@L["FromExcel"]</abp-dropdown-item>
        <abp-dropdown-item style="cursor: pointer" id="FromCsvButton">@L["FromCSV"]</abp-dropdown-item>
    </abp-dropdown-menu>
</abp-dropdown>
