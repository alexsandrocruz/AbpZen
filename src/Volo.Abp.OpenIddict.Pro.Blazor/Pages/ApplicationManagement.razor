@* ************************* TOKEN LIFETIME MODAL ************************* *@
@if (HasUpdatePermission)
{
    <Modal @ref="TokenLifetimeModal" Closing="@ClosingTokenLifetimeModal" RenderMode="ModalRenderMode.LazyReload">
        <ModalContent Centered="true">
            <Form Class="form-with-card" id="TokenLifetimeForm">
                <ModalHeader>
                    <ModalTitle>@L["TokenLifetime"].Value</ModalTitle>
                    <CloseButton Clicked="CloseTokenLifetimeModalAsync"/>
                </ModalHeader>
                <ModalBody>
                    <div class="mb-3">
                        <small class="text-muted">
                            <i class="fa fa-info-circle"></i> @L["TokenLifetimeHit"].Value
                        </small>
                    </div>
                    <Validations @ref="@TokenLifetimeValidationsRef" Model="@TokenLifetime" ValidateOnLoad="false">
                        <Validation MessageLocalizer="@LH.Localize">
                            <Field>
                                <FieldLabel>@L["AccessTokenLifetime"]</FieldLabel>
                                <NumericEdit TValue="double?" @bind-Value="TokenLifetime.AccessTokenLifetime" Autofocus="true">
                                    <Feedback>
                                        <ValidationError/>
                                    </Feedback>
                                </NumericEdit>
                            </Field>
                            <Field>
                                <FieldLabel>@L["AuthorizationCodeLifetime"]</FieldLabel>
                                <NumericEdit TValue="double?" @bind-Value="TokenLifetime.AuthorizationCodeLifetime">
                                    <Feedback>
                                        <ValidationError/>
                                    </Feedback>
                                </NumericEdit>
                            </Field>
                            <Field>
                                <FieldLabel>@L["DeviceCodeLifetime"]</FieldLabel>
                                <NumericEdit TValue="double?" @bind-Value="TokenLifetime.DeviceCodeLifetime">
                                    <Feedback>
                                        <ValidationError/>
                                    </Feedback>
                                </NumericEdit>
                            </Field>

                            <Field>
                                <FieldLabel>@L["IdentityTokenLifetime"]</FieldLabel>
                                <NumericEdit TValue="double?" TValue="double?" @bind-Value="TokenLifetime.IdentityTokenLifetime">
                                    <Feedback>
                                        <ValidationError/>
                                    </Feedback>
                                </NumericEdit>
                            </Field>
                            <Field>
                                <FieldLabel>@L["RefreshTokenLifetime"]</FieldLabel>
                                <NumericEdit TValue="double?" @bind-Value="TokenLifetime.RefreshTokenLifetime">
                                    <Feedback>
                                        <ValidationError/>
                                    </Feedback>
                                </NumericEdit>
                            </Field>
                            <Field>
                                <FieldLabel>@L["UserCodeLifetime"]</FieldLabel>
                                <NumericEdit TValue="double?" @bind-Value="TokenLifetime.UserCodeLifetime">
                                    <Feedback>
                                        <ValidationError/>
                                    </Feedback>
                                </NumericEdit>
                            </Field>
                        </Validation>
                    </Validations>
                </ModalBody>
                <ModalFooter>
