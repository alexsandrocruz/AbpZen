@using Volo.Abp.Http
@using Microsoft.Extensions.Localization
@using global::Localization.Resources.AbpUi
@inject IStringLocalizer<AbpUiResource> L

<div class="container">
    <div class="row">
        <div class="col-lg-10 col-md-11 mx-auto">
            <div class="d-flex flex-column justify-content-center min-vh-100 align-items-center">
                <div class="card"> 
                    <div class="card-body p-lg-5"> 
                        <div class="row">
                            <div class="col-auto d-flex align-items-center">
                                <i class="bi bi-emoji-frown text-primary mb-3 mb-md-0 mx-3 mx-md-4" style="font-size: 12em;"></i>   
                            </div>
                            <div class="col ps-2 ps-lg-4">
                                <div class="status-content">
                                    <h1 class="fw-bolder display-1 text-brand">@HttpStatusCode</h1>
                                    <h2 class="mb-0">@Title</h2>
                                    <h5 class="text-muted">@Message</h5>
                                    @* NO SUCH A FIELD FOR THESE *@
                                    @* <p class="mt-3 mb-4">@Details</p> *@
                                    
                                    <a href="/" class="btn btn-primary">@L["GoHomePage"]</a>
                                </div>
                            </div>
                        </div>
                    </div> 
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int HttpStatusCode { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Message { get; set; }
}
